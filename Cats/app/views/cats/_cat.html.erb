<table>
    <thead>
        <tr>
            <%=cat.name%>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Sex:</td>
            <td><%=cat.sex%></td>
        </tr>
        <tr>
            <td>Age:</td>
            <td><%=cat.age%></td>
        </tr>
         <tr>
            <td>Color:</td>
            <td><%=cat.color%></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><%=cat.description%></td>
        </tr>
    </tbody>
</table>

<%if action == :index %>
    <a href='<%=cat_url(cat)%>'> Inspect Cat </a>
<%elsif action == :show %>
    <a href='<%=cats_url%>'> Show all Cats </a>
    <br>
    <a href='<%=edit_cat_url(cat)%>'> Edit Cat</a>

<%end%>